{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "CoplandEvidence",
    "description": "Copland evidence term structure",
    "type": "object", 
    "oneOf": [ { "$ref": "#/$defs/mt_evt_Term" },
               { "$ref": "#/$defs/nonce_evt_Term" },
               { "$ref": "#/$defs/asp_evt_Term" },
               { "$ref": "#/$defs/split_evt_Term" },
               { "$ref": "#/$defs/left_evt_Term" },
               { "$ref": "#/$defs/right_evt_Term" }
            ], 

    "$defs": {

        "mt_evt_Term": {
            "type": "object",
            "properties": {
                "EvidenceT_CONSTRUCTOR": {"const": "mt_evt"}
            },
            "required": ["EvidenceT_CONSTRUCTOR"]
        }, 

         "nonce_evt_Term": {
            "type": "object",
            "properties": {
                "EvidenceT_CONSTRUCTOR": {"const": "nonce_evt"}, 
                "EvidenceT_BODY": {"type": "array", 
                              "prefixItems": [ {"type":"number"} ], 
                              "minItems": 1
                    }
            },
            "required": ["EvidenceT_CONSTRUCTOR", "EvidenceT_BODY"]
        },

        "left_evt_Term": {
            "type": "object",
            "properties": {
                "EvidenceT_CONSTRUCTOR": {"const": "left_evt"}, 
                "EvidenceT_BODY": { "$ref": "#" }
            },
            "required": ["EvidenceT_CONSTRUCTOR", "EvidenceT_BODY"]
        },

        "right_evt_Term": {
            "type": "object",
            "properties": {
                "EvidenceT_CONSTRUCTOR": {"const": "right_evt"}, 
                "EvidenceT_BODY": { "$ref": "#" }
            },
            "required": ["EvidenceT_CONSTRUCTOR", "EvidenceT_BODY"]
        },


        "asp_evt_Term": {
            "type": "object",
            "properties": {
                "EvidenceT_CONSTRUCTOR": {"const": "asp_evt"}, 
                "EvidenceT_BODY": 
                    {"type": "array", 
                              "prefixItems": [ {"type":"string"}, { "$ref": "copland_term_schema.json#/$defs/aspArgs" }, { "$ref": "#" } ], 
                              "minItems": 3
                    }
            },
            "required": ["EvidenceT_CONSTRUCTOR", "EvidenceT_BODY"]
        }, 

         "split_evt_Term": {
            "type": "object",
            "properties": {
                "EvidenceT_CONSTRUCTOR": {"const": "split_evt"}, 
                "EvidenceT_BODY": {"type": "array", 
                              "prefixItems": [ { "$ref": "#" }, { "$ref": "#" } ], 
                              "minItems": 2
                            }
            },
            "required": ["EvidenceT_CONSTRUCTOR", "EvidenceT_BODY"]
        }
  }
}
